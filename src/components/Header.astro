---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="flex flex-col sm:flex-row justify-between items-center backdrop-blur-sm sticky top-0 z-10 py-4">
  <a href="/" class="text-2xl font-bold hover:text-primary transition-colors relative group">
    Souhaildq
    <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all group-hover:w-full"></span>
  </a>
  <nav class="mt-4 sm:mt-0">
    <ul class="flex space-x-6">
      <li>
        <a href="/works" class={`hover:text-primary transition-colors relative group ${currentPath === 'works' ? 'text-primary' : ''}`}>
          Works
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all group-hover:w-full"></span>
        </a>
      </li>
      <li>
        <a href="/blog" class={`hover:text-primary transition-colors relative group ${currentPath === 'blog' ? 'text-primary' : ''}`}>
          Blog
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all group-hover:w-full"></span>
        </a>
      </li>
    </ul>
  </nav>
</header>